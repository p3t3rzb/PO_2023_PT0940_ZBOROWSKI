<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="200.0" minWidth="300.0"
            fx:controller="agh.ics.oop.presenter.SimulationPresenter">
    <top>
        <TextField fx:id="infoText" text="Type in moves here" alignment="CENTER"/>
    </top>
    <center>
        <VBox alignment="CENTER">
            <Button fx:id="infoButton" text="Start" onAction="#onSimulationStartClicked"/>
        </VBox>
    </center>
</BorderPane>
